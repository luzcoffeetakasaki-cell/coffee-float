rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      // 誰でも読み取り可能
      allow read: if true;
      
      // 作成は誰でも可能
      allow create: if true;
      
      // 更新ルール
      allow update: if 
        // 1. 「乾杯（likes）」の加算のみ（誰でもOK）
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']) 
        || 
        // 2. データ移行（ゲスト -> LINEユーザー）
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['userId']) &&
          request.auth != null &&
          request.resource.data.userId == request.auth.uid &&
          resource.data.userId.matches('^guest_.*')
        );
    }

    match /notifications/{notificationId} {
      // 自分の宛先の通知のみ読み取り可能
      allow read: if request.auth == null || resource.data.toUserId == request.auth.uid || true; // 簡略化して一旦true（後でuserIdベースに調整）
      // 実際はLIFFのuserIdを使うので、カスタムルールが必要だが、一旦簡易的に
      allow read, update, delete: if true; 
      allow create: if true;
    }
  }
}
